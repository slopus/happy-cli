{
  "name": "happy-coder",
  "version": "0.8.1-beta.0",
  "description": "Claude Code session sharing CLI",
  "author": "Kirill Dubovitskiy",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/slopus/happy-cli",
  "bugs": "https://github.com/slopus/happy-cli/issues",
  "repository": "slopus/happy-cli",
  "bin": {
    "happy": "./bin/happy.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./lib": {
      "require": {
        "types": "./dist/lib.d.cts",
        "default": "./dist/lib.cjs"
      },
      "import": {
        "types": "./dist/lib.d.mts",
        "default": "./dist/lib.mjs"
      }
    }
  },
  "files": [
    "dist",
    "bin",
    "scripts",
    "ripgrep",
    "package.json"
  ],
  "scripts": {
    "why do we need to build before running tests / dev?": "We need the binary to be built so we run daemon commands which directly run the binary - we don't want them to go out of sync or have custom spawn logic depending how we started happy",
    "typecheck": "tsc --noEmit",
    "build": "shx rm -rf dist && npx tsc --noEmit && pkgroll",
    "test": "yarn build && vitest run",
    "test:watch": "vitest",
    "test:integration-test-env": "yarn build && tsx --env-file .env.integration-test node_modules/.bin/vitest run",
    "dev": "yarn build && DEBUG=1 npx tsx src/index.ts",
    "dev:local-server": "yarn build && tsx --env-file .env.dev-local-server src/index.ts",
    "dev:integration-test-env": "yarn build && tsx --env-file .env.integration-test src/index.ts",
    "prepublishOnly": "yarn build && yarn test",
    "run commands below with npm - npm behaves poorly when running under yarn": "",
    "minor:publish": "yarn build && npm version minor && npm publish",
    "patch:publish": "yarn build && npm version patch && npm publish",
    "beta:publish": "yarn build && npm version prerelease --preid=beta && npm publish --tag beta"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.89",
    "@anthropic-ai/sdk": "^0.56.0",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@stablelib/base64": "^2.0.1",
    "@types/http-proxy": "^1.17.16",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^19.1.9",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "expo-server-sdk": "^3.15.0",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "4.0.2",
    "http-proxy": "^1.18.1",
    "http-proxy-middleware": "^3.0.5",
    "ink": "^6.1.0",
    "open": "^10.2.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.1.1",
    "socket.io-client": "^4.8.1",
    "tweetnacl": "^1.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@types/node": ">=20",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-prettier": "^10",
    "pkgroll": "^2.14.2",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "resolutions": {
    "whatwg-url": "14.2.0"
  },
  "packageManager": "yarn@1.22.22"
}
